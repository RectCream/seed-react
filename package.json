{
  "name": "seed-project",
  "version": "1.0.0",
  "description": "a web application teaching people how to grow plant",
  "main": "index.js",
  "repository": "git@github.com:RectCream/seed-react.git",
  "author": "Runze <sendrunzedong@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint-backend": "cd backend && yarn run lint",
    "lint-frontend": "cd frontend && yarn run lint",
    "lint": "npm-run-all -p lint-backend lint-frontend",
    "deps-backend": "cd backend && yarn install --frozen-lockfile",
    "deps-frontend": "cd frontend && yarn install --frozen-lockfile",
    "deps": "npm-run-all -p deps-backend deps-frontend",
    "build-frontend": "cd frontend && yarn build",
    "server": "cd backend && yarn start",
    "client": "cd frontend && yarn start",
    "dev-concurrent": "concurrently \"yarn run server\" \"yarn run client\"",
    "deploy": "npm-run-all lint build-frontend server"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run lint"
    }
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "concurrently": "^5.2.0"
  }
}
